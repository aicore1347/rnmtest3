{
  "extends": [
    "stylelint-config-standard",
    "stylelint-config-tailwindcss"
  ],
  "rules": {
    "at-rule-no-unknown": [
      true,
      {
        "ignoreAtRules": [
          "tailwind",
          "apply",
          "layer",
          "config",
          "variants",
          "responsive",
          "screen",
          "custom-variant",
          "theme"
        ]
      }
    ],
    "function-no-unknown": [
      true,
      {
        "ignoreFunctions": [
          "theme",
          "screen"
        ]
      }
    ],
    "rule-empty-line-before": ["always", { "except": ["first-nested"], "ignore": ["after-comment"] }],
    "lightness-notation": null,
    "hue-degree-notation": null
  }
}
